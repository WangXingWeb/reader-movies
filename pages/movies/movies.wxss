@import "movie-list/movie-list-template.wxss";
@import "movie-grid/movie-grid-template.wxss";

.container{
    background-color: #f2f2f2;
}

.search{
   background-color: #f2f2f2;
   height: 60rpx;
   width: 90%;
   margin: 15rpx auto 0;
   display: flex;
   flex-direction: row; 
   border-radius: 15rpx;
}

.search-img{
    margin: auto 0 auto 20rpx;    
}

.clear-img{
    margin: auto 20rpx auto 0;
}

.placeholder{
    font-size: 14px;
    color: #d1d1d1;
    margin-left: 10rpx;
}

.search input{
    height: 100%;
    width:600rpx;
    margin-left: 20rpx;
    font-size: 28rpx;
}

.container .movies-template{
    margin-bottom: 30rpx;
}

.search-panel{
    position: absolute;
    top:80rpx;
}